{
  "swagger": "2.0",
  "info": {
    "title": "FarmaSoft API",
    "description": "FarmaSoft API: Conectando Você ao Mundo dos Medicamentos",
    "version": "1.0.0"
  },
  "host": "localhost:3333",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Authentication",
      "description": "Insira a chave de atentiação JWT"
    }
  },
  "paths": {
    "/api/user/login": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Rota para autenticação de usuário",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required":true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type":"string",
                  "example": "user@example.com"
                },
                "password": {
                  "type":"string",
                  "example": "passWord@123"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/user/signup": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Rota para registrar um novo usuário.",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/user/admin/signup": {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Rota para registrar um novo usuário com privilégios de administrador.",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/buyers/admin/{offset}/{limit}": {
      "get": {
        "tags": [
          "Buyers"
        ],
        "description": "Obtenha a lista de compradores com paginação",
        "parameters": [
          {
            "name": "offset",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "limit",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/buyers/admin/{userId}": {
      "get": {
        "tags": [
          "Buyers"
        ],
        "description": "Obtenha informações de um comprador pelo ID do usuário",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "patch": {
        "tags": [
          "Buyers"
        ],
        "description": "Atualize informações de um comprador pelo ID.",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/products/admin": {
      "post": {
        "tags": [
          "Products"
        ],
        "description": "Crie um novo produto (requer autenticação)",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "required":true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required":true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "example": "Medicine"
                },
                "labName": {
                  "example": "MedicineLab"
                },
                "imageLink": {
                  "example": "any"
                },
                "dosage": {
                  "example": "123"
                },
                "dosageUnit": {
                  "example": "mg"
                },
                "description": {
                  "example": "Description of the medicine"
                },
                "unitPrice": {
                  "example": "1.23"
                },
                "typeProduct": {
                  "example": "não controlado"
                },
                "totalStock": {
                  "example": "123"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      },
      "get": {
        "tags": [
          "Products"
        ],
        "description": "Obtenha a lista de produtos.",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/products/{offset}/{limit}": {
      "get": {
        "tags": [
          "Products"
        ],
        "description": "Obtenha a lista de compradores com paginação",
        "parameters": [
          {
            "name": "offset",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "limit",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/products/{productId}": {
      "get": {
        "tags": [
          "Products"
        ],
        "description": "Obtenha informações de um produto pelo ID.",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/api/products/admin/{productId}": {
      "get": {
        "tags": [
          "Products"
        ],
        "description": "Obtenha informações de um produto pelo ID (requer autenticação)",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "patch": {
        "tags": [
          "Products"
        ],
        "description": "Atualize informações de um produto pelo ID (requer autenticação)",
        "parameters": [
          {
            "name": "productId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/sales": {
      "post": {
        "tags": [
          "Sales"
        ],
        "description": "Crie uma nova venda.",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      },
      "get": {
        "tags": [
          "Sales"
        ],
        "description": "Obtenha a lista de vendas.",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/sales/admin": {
      "get": {
        "tags": [
          "Sales"
        ],
        "description": "Obtenha a lista de vendas (restrito a administradores).",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/sales/dashboard/admin": {
      "get": {
        "tags": [
          "Sales"
        ],
        "description": "Obtenha dados do painel de controle de ventas (restrito a administradores).",
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    }
  }
}